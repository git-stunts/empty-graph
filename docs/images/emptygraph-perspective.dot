digraph EmptyGraphPerspective {
    // Graph settings
    rankdir=TB;
    splines=true;
    nodesep=0.6;
    ranksep=0.8;
    bgcolor="white";
    fontname="Helvetica";

    // Node defaults
    node [
        fontname="Helvetica",
        fontsize=11,
        style="filled",
        shape=ellipse,
        penwidth=2
    ];

    // Edge defaults
    edge [
        fontname="Helvetica",
        fontsize=9,
        color="#37474f",
        penwidth=2,
        arrowsize=0.8
    ];

    // Title
    labelloc="t";
    label=<<b>EmptyGraph Perspective: Logical Event Graph</b><br/><font point-size="10">Git storage abstracted away — just nodes and edges</font>>;
    fontsize=14;

    // Event nodes (no Git details, just logical events)
    order_created [
        label=<<b>OrderCreated</b><br/><font point-size="9">orderId: ORD-001</font>>,
        fillcolor="#c8e6c9",
        color="#2e7d32"
    ];

    item_added_1 [
        label=<<b>ItemAdded</b><br/><font point-size="9">sku: WIDGET-1</font>>,
        fillcolor="#bbdefb",
        color="#1565c0"
    ];

    item_added_2 [
        label=<<b>ItemAdded</b><br/><font point-size="9">sku: GADGET-2</font>>,
        fillcolor="#bbdefb",
        color="#1565c0"
    ];

    payment [
        label=<<b>PaymentReceived</b><br/><font point-size="9">amount: $99.99</font>>,
        fillcolor="#e1bee7",
        color="#7b1fa2"
    ];

    shipped [
        label=<<b>OrderShipped</b><br/><font point-size="9">tracking: 1Z999</font>>,
        fillcolor="#ffe0b2",
        color="#e65100"
    ];

    // Causal edges (child -> parent direction, showing "caused by")
    item_added_1 -> order_created [label="caused by"];
    item_added_2 -> order_created [label="caused by"];
    payment -> item_added_1 [label="requires"];
    payment -> item_added_2 [label="requires"];
    shipped -> payment [label="triggered by"];

    // Annotations
    subgraph cluster_notes {
        label="Key Concepts";
        style=rounded;
        color="#90a4ae";
        fontsize=10;
        fillcolor="#fafafa";

        note [
            label=<<table border="0" cellspacing="4">
                <tr><td align="left">• <b>Nodes</b> = Events with data</td></tr>
                <tr><td align="left">• <b>Edges</b> = Causal relationships</td></tr>
                <tr><td align="left">• <b>Structure</b> = DAG (no cycles)</td></tr>
                <tr><td align="left">• <b>Storage</b> = Invisible (Git internals)</td></tr>
            </table>>,
            shape=none,
            fillcolor="#fafafa"
        ];
    }
}
